<Ui xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.blizzard.com/wow/ui/">
	<Script file="DBGR.lua" />
	<Frame name="MailInfoFrame" inherits="" parent="UIParent">
		<Size x="500" y="200" />
		<Anchors>
			<Anchor x="-9" y="20" point="CENTER" />
		</Anchors>
		<Backdrop bgFile="Interface\AddOns\DBGR\img\darkrainbowbottombg.tga" edgeFile="Interface\DialogFrame\UI-DialogBox-Border">
			<BackgroundInsets left="10" right="10" top="10" bottom="10" />
		</Backdrop>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parent_Title" inherits="" font="Fonts\MORPHEUS.TTF" text="MailBox   Statistics" spacing="2" outline="NORMAL">
					<Size x="460" y="35" />
					<Anchors>
						<Anchor x="20" y="-20" point="TOPLEFT" relativeTo="MailInfoFrame" relativePoint="TOPLEFT" />
					</Anchors>
					<FontHeight val="24" />
					<Color g="1" />
					<Shadow>
						<Color r="0.502" g="1" b="0.502" />
					</Shadow>
				</FontString>
				<FontString name="$parent_Text" inherits="" font="Fonts\FRIZQT__.TTF" text="stats|nstats" spacing="1" outline="THICK" maxLines="5">
					<Size x="460" y="80" />
					<Anchors>
						<Anchor x="20" y="-60" point="TOPLEFT" />
					</Anchors>
					<FontHeight val="18" />
					<Color r="1" g="1" b="1" />
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parent_BtnOK" inherits="MagicButtonTemplate" text="OK">
				<Size x="50" y="30" />
				<Anchors>
					<Anchor y="20" point="BOTTOM" relativeTo="MailInfoFrame" relativePoint="BOTTOM" />
				</Anchors>
				<Scripts>
					<OnLoad>self:RegisterForClicks("AnyUp")</OnLoad>
					<OnClick>$parent:Hide();</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				self:SetMovable(true);
				self:RegisterForDrag("LeftButton");
			</OnLoad>
			<OnShow>
				OnShow_SettingsFrame(self);
			</OnShow>
			<OnDragStart>
				self:StartMoving();
			</OnDragStart>
			<OnDragStop>
				self:StopMovingOrSizing();
			</OnDragStop>
		</Scripts>
	</Frame>
</Ui>