<Ui xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.blizzard.com/wow/ui/">
	<Script file="DBGR.lua" />
	<FontFamily name="HeaderTitle" />
	<Frame name="SettingsFrame" inherits="GlowBoxTemplate" hidden="true" parent="UIParent" toplevel="true">
		<Size x="350" y="350" />
		<Anchors>
			<Anchor point="CENTER">
				<Offset x="-17" y="173" />
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="Title" inherits="GameFontRed" text="DBGR ADDON - SETTINGS" outline="NORMAL">
					<Size x="350" y="50" />
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="SettingsFrame" relativePoint="TOPLEFT" />
					</Anchors>
					<FontHeight val="16" />
					<Color r="1" />
					<Shadow>
						<Offset>
							<AbsDimension x="1" y="-1" />
						</Offset>
						<Color g="1" />
					</Shadow>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<CheckButton name="SetNotifySounds" inherits="ChatConfigCheckButtonTemplate" text="">
				<Size x="25" y="25" />
				<Anchors>
					<Anchor x="30" y="-30" point="TOPLEFT" relativeTo="Title" relativePoint="BOTTOMLEFT" />
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" parentKey="Text" inherits="GameFontNormalSmall" text="Notification sounds" justifyH="LEFT">
							<Anchors>
								<Anchor x="10" point="LEFT" relativePoint="RIGHT" />
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick>
						OnClick_SetNotifySounds(self);
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="SetAHNotify" inherits="ChatConfigCheckButtonTemplate" text="">
				<Size x="25" y="25" />
				<Anchors>
					<Anchor y="-60" point="BOTTOM" relativeTo="SetNotifySounds" relativePoint="TOP" />
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" parentKey="Text" inherits="GameFontNormalSmall" text="Auction House related notifications" justifyH="LEFT">
							<Anchors>
								<Anchor x="10" point="LEFT" relativePoint="RIGHT" />
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick>
						OnClick_SetAHNotify(self);
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="SetAfkNotify" inherits="ChatConfigCheckButtonTemplate" text="">
				<Size x="25" y="25" />
				<Anchors>
					<Anchor y="-60" point="BOTTOM" relativeTo="SetAHNotify" relativePoint="TOP" />
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" parentKey="Text" inherits="GameFontNormalSmall" text="AFK warnings" justifyH="LEFT">
							<Anchors>
								<Anchor x="10" point="LEFT" relativePoint="RIGHT" />
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick>
						OnClick_SetAfkNotify(self);
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="SetXPNotify" inherits="ChatConfigCheckButtonTemplate" text="">
				<Size x="25" y="25" />
				<Anchors>
					<Anchor y="-60" point="BOTTOM" relativeTo="SetAfkNotify" relativePoint="TOP" />
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" parentKey="Text" inherits="GameFontNormalSmall" text="Experience related info (on chat)" justifyH="LEFT">
							<Anchors>
								<Anchor x="10" point="LEFT" relativePoint="RIGHT" />
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick>
						OnClick_SetXPNotify(self);
					</OnClick>
				</Scripts>
			</CheckButton>
			<Button name="BtnSaveReload" inherits="MagicButtonTemplate" enableMouse="true" enableMouseClicks="true" text="Save &amp;&amp; Reload">
				<Size x="115" y="30" />
				<Anchors>
					<Anchor x="20" y="20" point="BOTTOMLEFT" relativeTo="SettingsFrame" relativePoint="BOTTOMLEFT" />
				</Anchors>
				<Scripts>
					<OnLoad>
						self:RegisterForClicks("AnyUp","AnyDown")
					</OnLoad>
					<OnClick>
						OnClick_SaveReload();
					</OnClick>
				</Scripts>
				<NormalColor r="1" g="1" />
			</Button>
			<Button name="BtnRestoreDef" inherits="MagicButtonTemplate" enableMouse="true" enableMouseClicks="true" text="Restore Defaults">
				<Size x="115" y="30" />
				<Anchors>
					<Anchor x="218" y="20" point="BOTTOMLEFT" relativeTo="SettingsFrame" relativePoint="BOTTOMLEFT" />
				</Anchors>
				<Scripts>
					<OnLoad>
						self:RegisterForClicks("AnyUp","AnyDown")
					</OnLoad>
					<OnClick>
						OnClick_RestoreDef();
					</OnClick>
				</Scripts>
				<NormalColor r="1" g="0.753" b="0.753" />
			</Button>
			<Button name="BtnCloseSettings" inherits="MagicButtonTemplate" enableMouse="true" enableMouseClicks="true" text="Close">
				<Size x="50" y="30" />
				<Anchors>
					<Anchor x="150" y="20" point="BOTTOMLEFT" relativeTo="SettingsFrame" relativePoint="BOTTOMLEFT" />
				</Anchors>
				<Scripts>
					<OnLoad>
						self:RegisterForClicks("AnyUp","AnyDown")
					</OnLoad>
					<OnClick>
						SettingsFrame:Hide();
					</OnClick>
				</Scripts>
				<NormalColor r="1" g="0.753" b="0.753" />
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				self:SetMovable(true);
				self:RegisterForDrag("LeftButton");
			</OnLoad>
			<OnShow>
				OnShow_SettingsFrame(self);
			</OnShow>
			<OnDragStart>
				self:StartMoving();
			</OnDragStart>
			<OnDragStop>
				self:StopMovingOrSizing();
			</OnDragStop>
		</Scripts>
	</Frame>
	<Frame name="MsgFrame" inherits="BackdropTemplate" hidden="true" parent="UIParent">
		<Size x="544" y="192" />
		<Anchors>
			<Anchor x="272" y="-496" point="TOPLEFT" />
		</Anchors>
		<KeyValues>
			<KeyValue key="backdropInfo" value="BACKDROP_DIALOG_32_32" keyType="string" type="global" />
		</KeyValues>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Gold-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Gold-Border" tile="true">
			<BorderColor r="0.706" g="0.706" b="0.706" />
		</Backdrop>
		<Layers>
			<Layer>
				<Texture file="Interface\AddOns\DBGR\img\d.tga">
					<Size x="64" y="64" />
					<Anchors>
						<Anchor point="CENTER" relativeTo="MsgFrame" relativePoint="TOPLEFT" />
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parentTitle" inherits="" font="Fonts\MORPHEUS.TTF" bytes="0" text="Title" outline="NORMAL">
					<Size x="520" y="30" />
					<Anchors>
						<Anchor x="8" y="-15" point="TOPLEFT" relativeTo="MsgFrame" relativePoint="TOPLEFT" />
					</Anchors>
					<FontHeight val="20" />
					<Color r="1" g="1" />
					<Shadow>
						<Color r="1" />
					</Shadow>
				</FontString>
				<FontString inherits="GameFontNormalMed1" text="FontString1">
					<Size x="512" y="96" />
					<Anchors>
						<Anchor x="16" y="-48" point="TOPLEFT" />
					</Anchors>
					<FontHeight val="20" />
					<Color r="1" g="1" b="1" />
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentBtnOK" inherits="UIGoldBorderButtonTemplate" text="OK">
				<Size x="88" y="24" />
				<Anchors>
					<Anchor y="15" point="BOTTOM" relativeTo="MsgFrame" relativePoint="BOTTOM" />
				</Anchors>
				<HighlightTexture file="Interface\BUTTONS\UI-Listbox-Highlight" alphaMode="ADD">
					<TexCoords left="0" right="1" top="0.03" bottom="0.7175" />
				</HighlightTexture>
				<Scripts>
					<OnLoad>
						self:RegisterForClicks("AnyUp")
					</OnLoad>
					<OnClick>
						MsgFrame:Hide();
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				self:SetMovable(true);
				self:RegisterForDrag("LeftButton");
			</OnLoad>
			<OnDragStart>
				self:StartMoving();
			</OnDragStart>
			<OnDragStop>
				self:StopMovingOrSizing();
			</OnDragStop>
		</Scripts>
	</Frame>
</Ui>