<Ui xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.blizzard.com/wow/ui/">
	<FontFamily name="HeaderTitle" />
	<Frame name="SettingsFrame" inherits="GlowBoxTemplate" hidden="true" parent="UIParent" toplevel="true">
		<Size x="350" y="350" />
		<Anchors><Anchor point="CENTER"><Offset x="-17" y="173" /></Anchor></Anchors>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="Title" inherits="GameFontRed" text="DBGR ADDON - SETTINGS" outline="NORMAL">
					<Size x="350" y="50" />
					<Anchors><Anchor point="TOPLEFT" relativeTo="SettingsFrame" relativePoint="TOPLEFT" /></Anchors>
					<FontHeight val="16" />
					<Color r="1" />
					<Shadow><Offset><AbsDimension x="1" y="-1" /></Offset><Color g="1" /></Shadow>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<CheckButton name="SetNotifySounds" inherits="ChatConfigCheckButtonTemplate" text="">
				<Size x="25" y="25" />
				<Anchors>
					<Anchor x="30" y="-30" point="TOPLEFT" relativeTo="Title" relativePoint="BOTTOMLEFT" />
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" parentKey="Text" inherits="GameFontNormalSmall" text="Notification sounds" justifyH="LEFT">
							<Anchors>
								<Anchor x="10" point="LEFT" relativePoint="RIGHT" />
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick>
						OnClick_SetNotifySounds(self);
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="SetAHNotify" inherits="ChatConfigCheckButtonTemplate" text="">
				<Size x="25" y="25" />
				<Anchors>
					<Anchor y="-60" point="BOTTOM" relativeTo="SetNotifySounds" relativePoint="TOP" />
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" parentKey="Text" inherits="GameFontNormalSmall" text="Auction House related notifications" justifyH="LEFT">
							<Anchors>
								<Anchor x="10" point="LEFT" relativePoint="RIGHT" />
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick>
						OnClick_SetAHNotify(self);
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="SetAfkNotify" inherits="ChatConfigCheckButtonTemplate" text="">
				<Size x="25" y="25" />
				<Anchors>
					<Anchor y="-60" point="BOTTOM" relativeTo="SetAHNotify" relativePoint="TOP" />
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" parentKey="Text" inherits="GameFontNormalSmall" text="AFK warnings" justifyH="LEFT">
							<Anchors>
								<Anchor x="10" point="LEFT" relativePoint="RIGHT" />
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick>
						OnClick_SetAfkNotify(self);
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="SetXPNotify" inherits="ChatConfigCheckButtonTemplate" text="">
				<Size x="25" y="25" />
				<Anchors>
					<Anchor y="-60" point="BOTTOM" relativeTo="SetAfkNotify" relativePoint="TOP" />
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" parentKey="Text" inherits="GameFontNormalSmall" text="Experience related info (on chat)" justifyH="LEFT">
							<Anchors>
								<Anchor x="10" point="LEFT" relativePoint="RIGHT" />
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick>
						OnClick_SetXPNotify(self);
					</OnClick>
				</Scripts>
			</CheckButton>
			<Button name="BtnSaveReload" inherits="MagicButtonTemplate" enableMouse="true" enableMouseClicks="true" text="Save &amp;&amp; Reload">
				<Size x="115" y="30" />
				<Anchors>
					<Anchor x="20" y="20" point="BOTTOMLEFT" relativeTo="SettingsFrame" relativePoint="BOTTOMLEFT" />
				</Anchors>
				<Scripts>
					<OnLoad>
						self:RegisterForClicks("AnyUp","AnyDown")
					</OnLoad>
					<OnClick>
						OnClick_SaveReload();
					</OnClick>
				</Scripts>
				<NormalColor r="1" g="1" />
			</Button>
			<Button name="BtnRestoreDef" inherits="MagicButtonTemplate" enableMouse="true" enableMouseClicks="true" text="Restore Defaults">
				<Size x="115" y="30" />
				<Anchors>
					<Anchor x="218" y="20" point="BOTTOMLEFT" relativeTo="SettingsFrame" relativePoint="BOTTOMLEFT" />
				</Anchors>
				<Scripts>
					<OnLoad>
						self:RegisterForClicks("AnyUp","AnyDown")
					</OnLoad>
					<OnClick>
						OnClick_RestoreDef();
					</OnClick>
				</Scripts>
				<NormalColor r="1" g="0.753" b="0.753" />
			</Button>
			<Button name="BtnCloseSettings" inherits="MagicButtonTemplate" enableMouse="true" enableMouseClicks="true" text="Close">
				<Size x="50" y="30" />
				<Anchors>
					<Anchor x="150" y="20" point="BOTTOMLEFT" relativeTo="SettingsFrame" relativePoint="BOTTOMLEFT" />
				</Anchors>
				<Scripts>
					<OnLoad>
						self:RegisterForClicks("AnyUp","AnyDown")
					</OnLoad>
					<OnClick>
						SettingsFrame:Hide();
					</OnClick>
				</Scripts>
				<NormalColor r="1" g="0.753" b="0.753" />
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				self:SetMovable(true);
				self:RegisterForDrag("LeftButton");
			</OnLoad>
			<OnShow>OnShow_SettingsFrame(self);</OnShow>
			<OnDragStart>self:StartMoving();</OnDragStart>
			<OnDragStop>self:StopMovingOrSizing();</OnDragStop>
		</Scripts>
	</Frame>
</Ui>