<Ui xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.blizzard.com/wow/ui/">
	<Frame name="SettingsFrame" hidden="true" parent="UIParent" toplevel="true">
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="Title" inherits="GameFontRed" text="" outline="NORMAL">
					<Size x="350" y="50" /><FontHeight val="16" /><Color r="1" />
					<Anchors><Anchor point="TOP" relativeTo="SettingsFrame" relativePoint="TOP" /></Anchors>
					<Shadow><Offset><AbsDimension x="1" y="-1" /></Offset><Color g="1" /></Shadow>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<CheckButton name="SetNotifySounds" inherits="ChatConfigCheckButtonTemplate" text="">
				<Size x="25" y="25" />
				<Anchors><Anchor x="30" y="-30" point="TOPLEFT" relativeTo="Title" relativePoint="BOTTOMLEFT" /></Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" parentKey="Text" inherits="GameFontNormalSmall" text="Notification sounds" justifyH="LEFT">
							<Anchors><Anchor x="10" point="LEFT" relativePoint="RIGHT" /></Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick>OnClick_SetNotifySounds(self);</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="SetAHNotify" inherits="ChatConfigCheckButtonTemplate" text="">
				<Size x="25" y="25" />
				<Anchors><Anchor y="-60" point="BOTTOM" relativeTo="SetNotifySounds" relativePoint="TOP" /></Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" parentKey="Text" inherits="GameFontNormalSmall" text="Auction House related notifications" justifyH="LEFT">
							<Anchors><Anchor x="10" point="LEFT" relativePoint="RIGHT" /></Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick>OnClick_SetAHNotify(self);</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="SetAfkNotify" inherits="ChatConfigCheckButtonTemplate" text="">
				<Size x="25" y="25" />
				<Anchors><Anchor y="-60" point="BOTTOM" relativeTo="SetAHNotify" relativePoint="TOP" /></Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" parentKey="Text" inherits="GameFontNormalSmall" text="AFK warnings" justifyH="LEFT">
							<Anchors><Anchor x="10" point="LEFT" relativePoint="RIGHT" /></Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick>OnClick_SetAfkNotify(self);</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="SetXPNotify" inherits="ChatConfigCheckButtonTemplate" text="">
				<Size x="25" y="25" />
				<Anchors><Anchor y="-60" point="BOTTOM" relativeTo="SetAfkNotify" relativePoint="TOP" /></Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" parentKey="Text" inherits="GameFontNormalSmall" text="Experience related info (on chat)" justifyH="LEFT">
							<Anchors><Anchor x="10" point="LEFT" relativePoint="RIGHT" /></Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick>OnClick_SetXPNotify(self);</OnClick>
				</Scripts>
			</CheckButton>
			<Button name="BtnRestoreDef" inherits="MagicButtonTemplate" enableMouse="true" enableMouseClicks="true" text="Restore Defaults">
				<Size x="120" y="20" />
				<Anchors><Anchor x="-5" y="5" point="BOTTOMRIGHT" relativeTo="SettingsFrame" relativePoint="BOTTOMRIGHT" /></Anchors>
				<Scripts>
					<OnLoad>self:RegisterForClicks("AnyUp")</OnLoad>
					<OnClick>OnClick_RestoreDef();</OnClick>
				</Scripts>
			</Button>
			<Button name="BtnSaveReload" inherits="MagicButtonTemplate" enableMouse="true" enableMouseClicks="true" text="Save &amp; Reload">
				<Size x="110" y="20" />
				<Anchors><Anchor x="-5" y="0" point="RIGHT" relativeTo="BtnRestoreDef" relativePoint="LEFT" /></Anchors>
				<Scripts>
					<OnLoad>self:RegisterForClicks("AnyUp")</OnLoad>
					<OnClick>ReloadUI();</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				self.name = "DBGR";
				InterfaceOptions_AddCategory(self,true,40);
				InterfaceAddOnsList_Update();
			</OnLoad>
			<OnShow>OnShow_SettingsFrame(self);</OnShow>
		</Scripts>
	</Frame>
</Ui>